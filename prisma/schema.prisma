generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime? @db.Timestamp(6)
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model ContactForm {
  id           String    @id @default(cuid())
  shop         String
  name         String
  phoneNumber  String
  email        String
  submittedAt  DateTime @default(now())
  isDeleted    Boolean  @default(false)
  messages     Message[] // Relationship to the Message model
}

model Message {
  id          String   @id @default(cuid())
  content     String
  contactId   String   // Foreign key to ContactForm
  createdAt   DateTime @default(now()) // Timestamp when the message was added
  contactForm ContactForm @relation(fields: [contactId], references: [id])
}